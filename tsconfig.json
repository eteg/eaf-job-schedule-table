{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "CommonJS",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": ".build",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/**/*.ts",
    "./src/**/**/**/*.ts",
    "./test/**/*.ts",
    "./test/**/**/*.ts",
  ]
}
